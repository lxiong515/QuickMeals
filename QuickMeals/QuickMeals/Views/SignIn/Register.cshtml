@model User

@{
    ViewData["Title"] = "Register";
}
<h1 class="default-font">Register</h1>
<hr />
<div class="row def">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label default-font">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label default-font"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="RoleID" value="1" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary default-font" />
            </div>
        </form>
    </div>
</div>

<div class="default-font">
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
