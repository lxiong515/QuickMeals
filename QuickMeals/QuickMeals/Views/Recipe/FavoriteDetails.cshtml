@model Recipe
@{ ViewData["Title"] = "Details"; }
<li class="list-group-item">
    <form asp-action="Add" method="post">
        <a asp-action="Index" class="btn btn-primary"
           asp-route-activeones="@Model.RecipeId"
           asp-route-activetwos="@Model.Title">
            Return to List
        </a>
        <a asp-action="Add" asp-controller="Favorite" class="btn btn-primary"
           asp-route-activeones="@Model.RecipeId"
           asp-route-activetwos="@Model.Title">
            Add to Favorites
        </a>
        @*<button type="submit" class="btn btn-primary">
                Add to Favorites
            </button>*@
        <input type="hidden" asp-for="RecipeId" />
    </form>
</li>

<div class="container text-center border-dark bg-light rounded">
    <div class="row">
        <h1 class="mb-2 col">@Model.Title</h1>
    </div>
    @if (System.IO.Directory.Exists(Recipe.Base))
    {
        if (Model.GetFileName() != null)
        {
            <div class="row">
                <img class="mb-2 col offset-md-3 col-md-6" src="/RecipeImages/@Model.GetFileName()" />
            </div>}
    }

    <div class="row">
        <h3 class="mt-3 mb-5 col col-md">Cook time: @Model.CookTime minutes</h3>
    </div>
    <div class="row">
        <p class="mb-5 col offset-md-3 col-md-6 text-center">@Model.Ingredients</p>
    </div>
    <div class="row">
        <p class="col offset-md-3 col-md-6 text-b text-center">@Model.Description</p>
    </div>
</div>