@model ListViewModel
@{
    ViewData["Title"] = "Favorites";

}
<div class="text-center">
    <h2>My Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary"
           asp-route-activeConf="@Model.Activeones"
           asp-route-activeDiv="@Model.Activetwos">
            Back to Home Page
        </a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>

<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Recipe recipe in Model.Activeones)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="-/images/@recipe.RecipeId" alt="" />

                        </div>
                        <div class="col-sm-4">
                            <a class="m-2" asp-action="FavoriteDetails" asp-controller="Recipe" asp-route-recipeId="@recipe.RecipeId">@recipe.Title</a>
                        </div>
                        <div class="col-sm-4">
                            @recipe.RecipeId
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>